{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react"
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "webpack.dev.js",
    "webpack.prod.js"
  ]
}
