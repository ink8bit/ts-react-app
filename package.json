{
  "name": "node-app-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:ink8bit/node-app-boilerplate.git",
  "author": "ink8bit <ink8bit@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=8.5.0"
  },
  "scripts": {
    "start": "yarn build && node ./dist",
    "dev": "nodemon --watch ./src --exec babel-node ./src --ignore public",
    "build": "babel --copy-files --out-dir dist --ignore __tests__ src",
    "test": "jest __tests__/*",
    "lint": "lint-staged",
    "lint:fix": "yarn eslint --fix ./src",
    "format": "yarn prettier --write \"src/*.js\"",
    "git:add": "git add -A",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn format",
      "yarn lint:fix",
      "yarn test",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-preset-env": "1.6.1",
    "babel-preset-flow": "6.23.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-flow": "2.29.1",
    "eslint-plugin-flowtype": "2.46.3",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-prettier": "2.6.0",
    "flow-bin": "0.71.0",
    "flow-typed": "2.4.0",
    "husky": "0.14.3",
    "jest": "22.4.3",
    "lint-staged": "7.1.0",
    "nodemon": "1.17.4",
    "prettier": "1.12.1"
  },
  "dependencies": {
    "body-parser": "1.18.2",
    "dotenv": "5.0.1",
    "express": "4.16.3",
    "pug": "2.0.3"
  }
}
